{
  "compilerOptions": {
    "target": "ES2020",
    "baseUrl": "./",
    "module": "ESNext",
    "moduleResolution": "node",
    "paths": {
      "@params": ["./types/params"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "assets/js/**/*"
  ],
  "exclude": [
    "assets/lib/**/*",
    "public",
    "node_modules"
  ]
}
